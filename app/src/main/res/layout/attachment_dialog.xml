<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attachment_dialog_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/recordings"
        android:layout_height="wrap_content"
        android:background="@android:drawable/list_selector_background"
        android:drawableLeft="@drawable/record"
        android:drawableStart="@drawable/record"
        android:drawablePadding="@dimen/default_item_padding"
        android:padding="@dimen/default_item_padding"
        android:paddingStart= "10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:text="Recordings"
        android:textSize="20dp"
        pixlui:typeface="Roboto-Regular.ttf"
        android:textColor="@color/md_teal_900"
        tools:ignore="MissingClass"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/location"
        android:layout_height="wrap_content"
        android:background="@android:drawable/list_selector_background"
        android:drawableLeft="@drawable/location"
        android:drawableStart="@drawable/location"
        android:drawablePadding="@dimen/default_item_padding"
        android:padding="@dimen/default_item_padding"
        android:paddingStart= "10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:text="Location"
        android:textSize="20dp"
        pixlui:typeface="Roboto-Regular.ttf"
        android:textColor="@color/md_teal_900"
        tools:ignore="MissingClass"
        android:layout_width="match_parent" />


</LinearLayout>
